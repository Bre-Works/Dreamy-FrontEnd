<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".Main"
    android:clickable="false"
    android:focusableInTouchMode="false"
    android:focusable="false"
    android:longClickable="false">

    <TextView
        android:text="Dreamy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="79dp"
        android:textSize="50sp"
        android:textColor="#ff69aaff"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textAdd" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton"
        android:layout_toStartOf="@+id/textAdd"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/textAdd"
        android:layout_alignStart="@+id/textAdd"
        android:layout_alignRight="@+id/textAdd"
        android:layout_alignEnd="@+id/textAdd"
        android:contentDescription="cloud"
        android:layout_alignParentEnd="false"
        android:focusable="false" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="60dip"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout"
        android:layout_alignParentEnd="false"
        android:gravity="center|center_horizontal"
        android:baselineAligned="true"
        android:background="#170908ff">

        <ImageButton
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:id="@+id/home"
            android:background="@drawable/homeactive"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="center|bottom" />

        <ImageButton
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:id="@+id/todo"
            android:background="@drawable/todoidle"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="center|bottom"
            android:onClick="gotoTodo"
            android:layout_marginLeft="20dip" />

        <ImageButton
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:id="@+id/note"
            android:background="@drawable/notesidle"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="center|bottom"
            android:onClick="gotoNote"
            android:layout_marginLeft="20dip" />

        <ImageButton
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:id="@+id/freetime"
            android:background="@drawable/freetimeidle"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:onClick="gotoFreeTime"
            android:layout_gravity="center|bottom"
            android:clickable="false"
            android:layout_marginLeft="20dip" />

    </LinearLayout>

</RelativeLayout>
