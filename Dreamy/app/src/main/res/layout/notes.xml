<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:text="@string/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:textColor="#1057CA"
        android:textSize="50dp"
        android:id="@+id/title"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="60dip"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout"
        android:background="#170908ff"
        android:layout_alignParentEnd="false"
        android:gravity="center|center_horizontal">

        <ImageButton
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:id="@+id/home"
            android:background="@drawable/homeidle"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:onClick="gotoHome"
            android:layout_gravity="center|bottom" />

        <ImageButton
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:id="@+id/todo"
            android:background="@drawable/todoidle"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="center|bottom"
            android:onClick="gotoTodo"
            android:layout_marginLeft="20dip" />

        <ImageButton
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:id="@+id/note"
            android:background="@drawable/notesactive"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="center|bottom"
            android:layout_marginLeft="20dip" />

        <ImageButton
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:id="@+id/freetime"
            android:background="@drawable/freetimeidle"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:onClick="gotoFreeTime"
            android:layout_gravity="center|bottom"
            android:clickable="false"
            android:layout_marginLeft="20dip" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="NOTES"
        android:id="@+id/textView"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="106dp" />

</RelativeLayout>