<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="To Do List"
        android:id="@+id/textTitle"
        android:textSize="32dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/btnAdd"
        android:layout_column="22"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tableTaskList"
        android:layout_below="@+id/btnAdd">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rowTask">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkBox1"
                android:layout_column="1"
                android:checked="false"
                android:layout_alignTop="@+id/textField1"
                android:layout_toLeftOf="@+id/textField1" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textField1"
                android:layout_marginTop="83dp"
                android:layout_column="2"
                android:text="add a task                            "
                android:layout_below="@+id/textTitle"
                android:layout_alignLeft="@+id/textTitle" />


        </TableRow>
    </TableLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="60dip"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout"
        android:background="#170908ff"
        android:layout_alignParentEnd="false"
        android:gravity="center|center_horizontal">

        <ImageButton
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:id="@+id/home"
            android:background="@drawable/homeidle"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:onClick="gotoHome"
            android:layout_gravity="center|bottom" />

        <ImageButton
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:id="@+id/todo"
            android:background="@drawable/todoactive"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="center|bottom"
            android:layout_marginLeft="20dip" />

        <ImageButton
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:id="@+id/note"
            android:background="@drawable/notesidle"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="center|bottom"
            android:onClick="gotoNote"
            android:layout_marginLeft="20dip" />

        <ImageButton
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:id="@+id/freetime"
            android:background="@drawable/freetimeidle"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:onClick="gotoFreeTime"
            android:layout_gravity="center|bottom"
            android:clickable="false"
            android:layout_marginLeft="20dip" />

    </LinearLayout>
</RelativeLayout>